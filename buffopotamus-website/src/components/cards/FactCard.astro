---
const { title, content, image, category, funActivity } = Astro.props;
---

<div class="fact-card" data-category={category}>
  <div class="fact-image">
    <img src={image} alt={title} />
  </div>
  <div class="fact-content">
    <h3>Did You Know?</h3>
    <h4>{title}</h4>
    <p>{content}</p>
    {funActivity && (
      <div class="fun-activity">
        <h5>Fun Activity</h5>
        <p>{funActivity}</p>
      </div>
    )}
  </div>
</div>

<style>
  .fact-card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-soft-white);
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin-bottom: var(--space-lg);
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .fact-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0,0,0,0.15);
  }
  
  .fact-card[data-category="buffalo"] {
    border-left: 5px solid var(--color-buffalo-brown);
  }
  
  .fact-card[data-category="hippo"] {
    border-left: 5px solid var(--color-water-blue);
  }
  
  .fact-card[data-category="buffopotamus"] {
    border-left: 5px solid var(--color-buffopotamus-purple);
  }
  
  .fact-image {
    height: 200px;
    overflow: hidden;
  }
  
  .fact-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .fact-card:hover .fact-image img {
    transform: scale(1.05);
  }
  
  .fact-content {
    padding: var(--space-md);
  }
  
  .fact-content h3 {
    color: var(--color-buffopotamus-purple);
    margin-bottom: var(--space-xs);
    font-size: var(--font-size-h4);
  }
  
  .fact-content h4 {
    margin-bottom: var(--space-sm);
    color: var(--color-dark-charcoal);
  }
  
  .fun-activity {
    margin-top: var(--space-md);
    padding: var(--space-md);
    background-color: var(--color-sunshine-yellow);
    border-radius: var(--radius-md);
  }
  
  .fun-activity h5 {
    font-family: var(--font-accent);
    margin-bottom: var(--space-xs);
    color: var(--color-dark-charcoal);
  }
  
  .fun-activity p {
    margin-bottom: 0;
  }
  
  @media (min-width: 768px) {
    .fact-card {
      flex-direction: row;
      align-items: stretch;
    }
    
    .fact-image {
      width: 40%;
      height: auto;
    }
    
    .fact-content {
      width: 60%;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
  }
</style>
