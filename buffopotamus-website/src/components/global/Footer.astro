---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <img src="/images/buffopotamus-logo-white.svg" alt="Buffopotamus" width="150" height="45" />
      </div>
      <div class="footer-nav">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/stories">Stories</a></li>
          <li><a href="/gallery">Gallery</a></li>
          <li><a href="/facts">Fun Facts</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </div>
      <div class="footer-copyright">
        <p>&copy; {currentYear} Buffopotamus. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-buffalo-brown);
    color: var(--color-soft-white);
    padding: var(--space-lg) 0;
    margin-top: var(--space-xl);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .footer-logo img {
    display: block;
    max-width: 100%;
    height: auto;
  }

  .footer-nav ul {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    gap: var(--space-md);
  }

  .footer-nav a {
    color: var(--color-soft-white);
    text-decoration: none;
    font-size: var(--font-size-small);
    transition: color 0.2s ease;
  }

  .footer-nav a:hover {
    color: var(--color-sunshine-yellow);
    text-decoration: underline;
  }

  .footer-copyright {
    font-size: var(--font-size-caption);
  }

  @media (max-width: 767px) {
    .footer-content {
      text-align: center;
    }

    .footer-nav ul {
      justify-content: center;
    }
    
    .footer-logo {
      display: flex;
      justify-content: center;
    }
  }

  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }
</style>
